<p id="notice"><%= notice %></p>

<h1>Grades</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Value</th>
      <th>Person</th>
      <th>Assignment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.value %></td>
        <td><%= grade.person %></td>
        <td><%= grade.assignment %></td>
        <td><%= link_to 'Show', [@course, @assignment, grade] %></td>
        <td><%= link_to 'Edit', edit_course_assignment_grade_path(id: grade.id) %></td>
        <td><%= link_to 'Destroy', [@course, @assignment, grade], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Show Assignment', course_assignment_path(id: @assignment.id) %>
<%= link_to 'New Grade', new_course_assignment_grade_path %>
