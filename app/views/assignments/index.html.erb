<p id="notice"><%= notice %></p>

<h1>Assignments</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Statement</th>
      <th>Grades</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.title %></td>
        <td><%= assignment.statement %></td>
        <td>
          <%= link_to 'Grades', course_assignment_grades_path(assignment_id: assignment.id) %>
        </td>
        <td><%= link_to 'Show', [@course, assignment] %></td>
        <td>
          <%= link_to 'Edit', edit_course_assignment_path(id: assignment.id) %>
        </td>
        <td><%= link_to 'Destroy', [@course, assignment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

